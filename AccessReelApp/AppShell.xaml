<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AccessReelApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AccessReelApp"
    xmlns:view="clr-namespace:AccessReelApp.Views"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Shell.FlyoutBehavior="Flyout"
    Shell.ForegroundColor="#171516"
    FlyoutBackgroundColor="#FFFFFF"
    BackgroundColor="#FFFFFF">

    <Shell.Resources>
        <ResourceDictionary>
            
            <!-- set background coloour of shell-->
            <Color x:Key="ShellBackgroundColor">#FFFFFF</Color>
            
        </ResourceDictionary>
    </Shell.Resources>

    <Shell.TitleView>

        <Grid HeightRequest="50">

            <!-- accessreel.com logo-->
            <Image Source="accessreel_logo.png"
                   WidthRequest="125"
                   HeightRequest="75"
                   HorizontalOptions="Center"
                   Scale="0.8"
                   Aspect="AspectFit"/>

        </Grid>

    </Shell.TitleView>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Shell.TabBarIsVisible="False">
        
        <ShellContent Title="Home"
                      Route="home" 
                      ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent Title="News"
                      ContentTemplate="{DataTemplate view:NewsPage}" />

        <ShellContent Title="Reviews"
                      ContentTemplate="{DataTemplate view:ReviewsPage}" />

        <ShellContent Title="Interviews"
                      ContentTemplate="{DataTemplate view:InterviewsPage}" />

        <ShellContent Title="Map"
                      ContentTemplate="{DataTemplate view:InterviewsPage}" />

        <ShellContent Title="Log In"
                      ContentTemplate="{DataTemplate view:SignUpLogin}" />
        
    </FlyoutItem>

    <TabBar>

        <Tab Title="Home">
            <ShellContent Route="home" 
                          ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="George">
            <ShellContent ContentTemplate="{DataTemplate view:NewsPage}" />
        </Tab>

        <Tab Title="Braden">
            <ShellContent ContentTemplate="{DataTemplate view:ReviewsPage}" />
        </Tab>

    </TabBar>

</Shell>
