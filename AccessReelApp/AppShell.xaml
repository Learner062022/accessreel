<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AccessReelApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AccessReelApp"
    xmlns:view="clr-namespace:AccessReelApp.Views"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Shell.FlyoutBehavior="Flyout">

    <!--Example "Top bar"-->
    <!--IsVisible="False" use for when creating login-->
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home"
                      Route="home" 
                      ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="News" 
                      ContentTemplate="{DataTemplate view:NewsPage}" />
        <ShellContent Title="Reviews"
                      ContentTemplate="{DataTemplate view:ReviewsPage}"/>
        <ShellContent Title="Interviews"
                      ContentTemplate="{DataTemplate view:InterviewsPage}"/>
    </FlyoutItem>
    
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
